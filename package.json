{
  "name": "base-express",
  "version": "0.0.1",
  "description": "ExpressJS boilerplate.",
  "author": "ariym",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "tsx --watch --env-file=.env src/server.ts",
    "build": "pkgroll --env-file=.env src/server.ts",
    "prod": "npm run build && node --env-file=.env dist/server.js"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "pkgroll": "^2.20.1",
    "tsx": "^4.20.6",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  }
}
